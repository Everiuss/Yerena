---
import { Icon } from "astro-icon";
import SectionContainer from "./SectionContainer.astro";
import { Image } from "@astrojs/image/components";

const { columnData } = Astro.props;
---

<SectionContainer
    class="benefits-lists grid gap-x-8 gap-y-16 grid-cols-1 md:grid-cols-2 lg:grid-cols-4 mt-16"
>
    {
        columnData.map((item) => (
            <div
                id={item.id}
                class="benefits-list--item text-[#737373] text-left"
            >
                <Image
                        src={item.image}
                        width={380}
                        height={380}
                        aspectRatio={1 / 1}
                        alt="Process Banner 1"
                        class="drop-shadow-xl w-full offset-y-0 offset-x-8 blur-16 object-cover"
                    />
                <h3 class="text-xl mb-2 font-medium text-black">
                    {item.title}
                </h3>
                <p>{item.content}</p>
                <o class="flex">
                    <Icon name="mdi:star" class="h-6 mr-1 text-secondary-500" />
                    <Icon name="mdi:star" class="h-6 mr-1 text-secondary-500" />
                    <Icon name="mdi:star" class="h-6 mr-1 text-secondary-500" />
                    <Icon name="mdi:star" class="h-6 mr-1 text-secondary-500" />
                    <Icon name="mdi:star" class="h-6 mr-1 text-secondary-500" />
                </o>
            </div>
        ))
    }
</SectionContainer>
